{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/hnrobert-homepage/node_modules/next/dist/bin/next",
      "args": [
        "dev",
        "-p",
        "9970"
      ],
      "runtimeArgs": [
        "-r",
        "dotenv/config"
      ],
      "cwd": "${workspaceFolder}/hnrobert-homepage",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
    },
    {
      "name": "Next.js: debug build",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/hnrobert-homepage/node_modules/next/dist/bin/next",
      "args": [
        "start",
        "-p",
        "9970"
      ],
      "runtimeArgs": [
        "-r",
        "dotenv/config"
      ],
      "cwd": "${workspaceFolder}/hnrobert-homepage",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "production"
      },
    }
  ]
}